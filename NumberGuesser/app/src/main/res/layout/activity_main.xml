<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="30sp"
        android:gravity="center_horizontal"
        android:text="Kérem tippeljen! \n(1 és 100 között)"
        android:textSize="28sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kérem adja meg a tippjét...">
        <EditText
            android:id="@+id/etGuess"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:layout_marginHorizontal="20sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnGuess"
        android:layout_marginHorizontal="20sp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipp"/>

    <TextView
        android:id="@+id/tvNumOfGuess"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eddigi tippek száma: "/>

    <TextView
        android:id="@+id/tvGuesses"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eddigi tippek: "/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="fill_parent"
        android:layout_marginHorizontal="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:textSize="30sp"
        android:gravity="center" />

</LinearLayout>